<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="tty.community">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".pages.activity.CreateBlogActivity" android:theme="@style/AppTheme.NoActionBar" android:launchMode="singleInstance"/>
        <activity
            android:name=".pages.activity.UserDetailActivity"
            android:label="详细信息"
            android:launchMode="singleInstance"/>
        <activity
            android:name=".pages.activity.RegisterActivity"
            android:label="注册"
            android:launchMode="singleInstance"/>
        <activity
            android:name=".pages.activity.LoginActivity"
            android:label="登录"
            android:launchMode="singleInstance"/>
        <activity
            android:name=".pages.activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>